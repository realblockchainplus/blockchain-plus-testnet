{
  "name": "blockchain-plus-testnet",
  "version": "1.0.1-alpha.13",
  "description": "Typescript implementation of the blockchain network laid out in the Blockchain+ whitepaper.",
  "repository": {
    "type": "git",
    "url": "https://github.com/villith/blockchain-plus-testnet"
  },
  "author": "Scott Donnelly <scott.donnelly790@gmail.com> (https://github.com/villith)",
  "license": "ISC",
  "scripts": {
    "compile": "tsc",
    "start": "node js/app.js",
    "all-scripts": "npm run create-image",
    "docs": "typedoc --name \"Blockchain Plus Testnet\" --mode file --hideGenerator --out docs src",
    "now-start": "node js/app.js -s true",
    "setup": "npm install",
    "start-partner": "node js/app.js -t 1 -s false -p 80",
    "start-regular": "node js/app.js -t 0 -s false -p 80",
    "start-partner-local": "node js/app.js -t 1 -s false",
    "start-regular-local": "node js/app.js -t 0 -s false",
    "start-partner-local-debug": "set DEBUG=bcp:* && node js/app.js -t 1 -s false",
    "start-regular-local-debug": "set DEBUG=bcp:* && node js/app.js -t 0 -s false",
    "start-cluster-local": "node js/app.js -s false -c true --np=4 --nr=12",
    "create-image": "node js/scripts/create-image.js",
    "test-network": "node js/scripts/test-network.js",
    "deploy-seed": "echo y | now rm blockchain-plus-testnet && npm run compile && now deploy --public && now alias",
    "aws-test": "node js/app.js -s false --min=10 --nodes=50",
    "test": "mocha --exit -r ts-node/register tests/*.spec.ts"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "crypto-js": "^3.1.9-1",
    "dotenv": "^6.0.0",
    "elliptic": "^6.4.1",
    "express": "^4.16.3",
    "minimist": "^1.2.0",
    "mongoose": "^5.2.7",
    "object-hash": "^1.3.0",
    "socket.io": "^2.1.1",
    "socket.io-client": "^2.1.1",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.4",
    "@types/cors": "^2.8.4",
    "@types/crypto-js": "^3.1.43",
    "@types/debug": "0.0.30",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/minimist": "^1.2.0",
    "@types/mocha": "^5.2.5",
    "@types/mongoose": "^5.2.5",
    "@types/node": "^10.5.8",
    "@types/object-hash": "^1.2.0",
    "@types/socket.io": "^1.4.36",
    "@types/socket.io-client": "^1.4.32",
    "@types/uuid": "^3.4.3",
    "aws-sdk": "^2.291.0",
    "chai": "^4.1.2",
    "chai-fs": "^2.0.0",
    "debug": "^3.1.0",
    "mocha": "^5.2.0",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.9.2",
    "typedoc": "^0.11.1",
    "uuid": "^3.3.2"
  },
  "now": {
    "alias": "bcp-tn",
    "files": [
      "js",
      "node/config",
      ".env"
    ]
  }
}
