{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2017",
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,  
    "sourceMap": true,
    "outDir": "js",
    "baseUrl": ".",
    "paths": {
      "*": [
        "types/*.d.ts"
      ]
    }
  },
  "compileOnSave": true,
  "include": [
    "src/*.ts",
    "src/*/*.ts"
  ],
  "exclude": [
    "node_modules",
    "types"
  ]
}
