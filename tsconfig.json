{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2016",
    "noImplicitAny": true,    
    "sourceMap": true,
    "outDir": "js",
    "baseUrl": ".",
    "paths": {
      "*": [
        "types/*.d.ts"
      ]
    }
  },
  "compileOnSave": true,
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "node_modules",
    "types"
  ]
}
